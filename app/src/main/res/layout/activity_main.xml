<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fields"
    android:padding="1dp"
    android:scrollbars="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textColor="@android:color/holo_orange_dark"
        android:text="CAF Champions League Final 2018"
        android:textAlignment="center"
        android:background="@android:color/background_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context="MainActivity">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/oak"
                android:textAlignment="center"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accra Hearts of oak"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="teamAGoal"
                android:text="goals"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:background="@android:color/holo_orange_light"/>
            <TextView
                android:id="@+id/team_a_foul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="8dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="teamAFoul"
                android:text="fouls"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:background="@android:color/holo_blue_light"/>
            <TextView
                android:id="@+id/team_a_conner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="8dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="teamAConner"
                android:text="Corners"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textView"
            android:layout_width="2dp"
            android:layout_height="425dp"
            android:text=""
            android:background="@android:color/darker_gray"
            android:paddingTop="0dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_marginBottom="180dp"
            android:layout_marginTop="32dp"/>
        <LinearLayout
            android:id="@+id/llB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context="MainActivity">

            <ImageView
                android:id="@+id/imageVie"
                android:layout_width="150dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/zam"
                android:textAlignment="center"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zamalek sc"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="teamBGoal"
                android:text="goals"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:background="@android:color/holo_orange_light"/>
            <TextView
                android:id="@+id/team_b_foul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="8dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="teamBFoul"
                android:text="fouls"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:background="@android:color/holo_blue_light"/>
            <TextView
                android:id="@+id/team_b_conner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="8dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="teamBConner"
                android:text="Corners"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:background="@android:color/darker_gray"/>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="Reset"
        android:textAlignment="center"
        android:onClick="resetScore"
        android:layout_marginBottom="18dp"
        android:background="@android:color/holo_red_dark"/>
</RelativeLayout>